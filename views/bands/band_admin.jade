extends ../layout

block content
  h3= title

  ul.nav.nav-list
    - for (var b in bandsList)
      li
        div.row
          div.col-md-4
            a(href='/bands/'+bandsList[b].bid)
              i.glyphicon.glyphicon-music &nbsp;
              =bandsList[b].name
          div.col-md-1
            a(href='/bands/edit/'+bandsList[b].bid)
              i.glyphicon.glyphicon-edit
              &nbsp;
              &nbsp;
            a(href='/bands/del/'+bandsList[b].bid)
              i.glyphicon.glyphicon-remove.mint
          
  a(href='/bands/add')
    i.glyphicon.glyphicon-plus