extends ../layout

block content
  h2  #{band.name}
      i  (#{band.state})
  div.row
    div.col-md-7 
      img.rfloat.img-rounded(src="/images/main/"+band.mainImage, width="180px")
      |#{band.short}
    div.col-md-4 Состав:
      each m in band.members
        li
          a(href='/bands/')=m.name
  hr
  div.row
    div.col-md-7 !{band.history)
    div.col-md-4 Дискография:
      each a in band.albums
        li
          a(href='/records/'+a.rid)=a.name+" "+a.year
